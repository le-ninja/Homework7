<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_card">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/message_gl">

            <ImageView
                app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
                android:id="@+id/message_user_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_subject_from_ll"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:text="Message Subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_subject_tv"
                    android:textSize="28sp" />

                <TextView
                    android:text="From User"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/message_from_tv"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="10"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:id="@+id/message_btns_ll"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:layout_width="30dp"
                    app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
                    android:id="@+id/message_reply_btn"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@null"
                    android:scaleType="fitXY"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha"
                    android:id="@+id/message_remove_btn"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_row="0"
                    android:layout_column="13"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </GridLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>